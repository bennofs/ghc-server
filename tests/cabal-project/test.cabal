cabal-version:       >=1.10

library
  exposed-modules:     
     LibraryModule
   , Data.SomeModule
  build-depends:       base >=4.4 && < 5
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite library-tests
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:      library-tests
  build-depends:       base, cabal, containers
  default-language:    Haskell2010

executable independent-executable
  main-is: Main.hs
  hs-source-dirs:      independent-src
  build-depends:       base, text
  default-language:    Haskell2010